{
  "root": true,
  "env": { "node": true, "es2021": true },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {},
  "settings": {
    "import/resolver": {
      "typescript": {
        // ðŸ‘‡ Explicitly include both local + root configs
        "project": ["./tsconfig.json", "../../tsconfig.json", "../../tsconfig.base.json"]
      },
      "node": {
        "extensions": [".js", ".ts", ".d.ts"],
        "moduleDirectory": [
          "node_modules",
          "../../node_modules" // ðŸ‘ˆ allow resolution from root too
        ]
      }
    }
  }
}
