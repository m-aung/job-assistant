{
  "name": "@job-assistant/backend",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch dist src/server.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint 'src/**/*.ts' --fix",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "openai": "^5.23.1",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
