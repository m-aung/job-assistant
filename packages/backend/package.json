{
  "name": "@job-assistant/backend",
  "version": "0.1.0",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "vite --host",
    "dev": "nodemon --watch src --exec \"node -r ts-node/register\" src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint 'src/**/*.{ts,js}' --fix",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "openai": "^5.23.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.5.1",
    "@typescript-eslint/parser": "^6.9.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.6.2",
    "vitest": "^1.2.2"
  }
}
